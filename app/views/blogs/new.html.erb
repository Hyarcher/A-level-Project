<h1>New Article</h1>

<%= "This article is written by #{current_user.firstname} "%>

<div class='span6'>
<%= form_for @blog do |h| %>
  <br />
  <%= h.text_area :bodyText, cols: 50, rows: 4, class: "message" %>
  <br />
  <%= h.text_field :fee %>
  <%= h.hidden_field :user_id, value: current_user.id%>

  <%= h.submit 'add' %>
<% end %>
</div>
